<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="node_name_1" default="ublox_1" />
  <arg name="node_name_2" default="ublox_2" />
  <arg name="param_file_name" doc="name of param file, e.g. rover" default="dual_gps_config" />
  <arg name="output" default="screen" />
  <arg name="respawn" default="true" />
  <arg name="respawn_delay" default="30" />
  <arg name="clear_params" default="true" />

  <group>
    <node pkg="ublox_gps" type="ublox_gps" name="$(arg node_name_1)"
        output="$(arg output)" 
        clear_params="$(arg clear_params)"
        respawn="$(arg respawn)" 
        respawn_delay="$(arg respawn_delay)">
      <rosparam command="load" 
              file="$(find ublox_gps)/config/$(arg param_file_name).yaml" />
      <remap from="gps/fix" to="gps1/fix"/>
    </node>

    <node pkg="ublox_gps" type="ublox_gps" name="$(arg node_name_2)"
        output="$(arg output)" 
        clear_params="$(arg clear_params)"
        respawn="$(arg respawn)" 
        respawn_delay="$(arg respawn_delay)">
      <rosparam command="load" 
              file="$(find ublox_gps)/config/$(arg param_file_name).yaml" />
      <remap from="gps/fix" to="gps2/fix"/>
    </node>
  </group>
</launch>