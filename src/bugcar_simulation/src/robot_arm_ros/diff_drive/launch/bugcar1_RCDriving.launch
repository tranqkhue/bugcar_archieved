<launch>
    <include file="$(find roboclaw_node)/launch/roboclaw_node.launch"/>
    
    <node pkg="rosserial_python" type="serial_node.py" name="RC_Controller">
        <param name="port" value="/dev/ttyUSB1"/>
        <param name="baud" value="115200"/>
    </node>

    <node pkg="rosserial_python" type="serial_node.py" name="IMU">
        <param name="port" value="/dev/ttyUSB0"/>
        <param name="baud" value="115200"/>

    </node>

    <node pkg="rosserial_python" type="serial_node.py" name="GPS">
        <param name="port" value="/dev/ttyACM1"/>
        <param name="baud" value="115200"/>
    </node>
</launch>
